<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory name="">
  <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
  <property name="hibernate.connection.password">root</property>
  <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/empresa</property>
  <property name="hibernate.connection.username">root</property>
  <property name="hibernate.dialect">org.hibernate.dialect.DB2400Dialect</property>
  <mapping class="Departamentos" file="Departamentos.java" resource="Departamentos.hbm.xml"/>
  <mapping class="Empleados" file="Empleados.java" resource="Empleados.hbm.xml"/>
 </session-factory>
</hibernate-configuration>

<!--  Este es el archivo de configuración de Hibernate, como puedes ver incluye:

	- Datos de conexión a la BBDD
	- Mapeos de las clases java con Hibernate
 -->